#!/usr/bin/env ruby
# encoding: UTF-8

begin
  # resolve bin path, ignoring symlinks
  require "pathname"
  bin_file = Pathname.new(__FILE__).realpath

  # add self to libpath
  $:.unshift File.expand_path("../../lib", bin_file)

  # start up the CLI
  require "cosm/cli"
  Cosm::CLI.start(*ARGV)
rescue Interrupt
  `stty icanon echo`
  puts("\n !    Command cancelled.")
end
